{
  "manifest_version": 2,
  "name": "AccNotes - AI-Powered BITV Testing Assistant",
  "version": "0.5.0",
  "description": "Automated browser extension for BITV accessibility testing with AI-inspired features. Complete end-to-end workflow from problem detection to BITV-compliant documentation in under 30 seconds.",
  "author": "Heiko Folkerts",
  "homepage_url": "https://github.com/heikofolkerts/AccNotes",

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "permissions": [
    "contextMenus",
    "tabs",
    "activeTab",
    "storage",
    "file://*/*"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "web_accessible_resources": [
    "note.html",
    "note.js",
    "notes-overview.html",
    "notes-overview.js",
    "help.html",
    "help.js",
    "styles/modern-theme.css",
    "scripts/theme-toggle.js",
    "scripts/bitv-catalog.js",
    "scripts/storage-helper.js",
    "scripts/barrier-detector.js"
  ],

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["scripts/barrier-detector.js", "content.js"],
    "run_at": "document_end",
    "all_frames": true
  }],

  "content_security_policy": "script-src 'self'; object-src 'self'"
}
